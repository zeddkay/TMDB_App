<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zukhrufkhan.dps924zukhrufprojectv1.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Suggest Something - the app that helps you choose the highest rated movies and tv shows to watch next!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/searchMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Search for a movie"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView3" />

    <Button
        android:id="@+id/searchActor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for an actor"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/searchTVShow"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/highestRated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Highest rated movies and tv shows"
        android:layout_below="@+id/searchActor"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/searchTVShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchMovie"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Search for a tv show" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by the TMDB API"
        android:layout_below="@+id/highestRated"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>
